<h1><%= @patient.name %></h1>
<h3>Doctors:</h3>
<ul>
    <% @patient.doctors.each do |doctor| %>
        <li><%= link_to doctor.name, doctor_path(doctor) %></li>
    <% end %>
</ul>
<h3>Appointments:</h3>
<ul>
    <% @patient.appointments.each do |appointment| %>
        <li><%= link_to appointment.display_datetime, appointment_path(appointment) %></li>
    <% end %>
</ul>